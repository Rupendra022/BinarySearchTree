class Solution {
    public ArrayList<Node> findPreSuc(Node root, int key) {
        // RADHE RADHE 
        // code here
        ArrayList<Node> ans = new ArrayList<>();
        Node pre = null ; 
        Node succ = null ; 
        
        Node temp = root ; 
        while(temp!=null){
            if(temp.data<key){
                pre = temp ; 
                temp = temp.right ; 
            }
            else{
                temp = temp.left ; 
            }
        }
        
        temp = root ; 
        while(temp!=null){
            if(temp.data<=key){
                temp = temp.right ; 
            }
            else{
                succ = temp ; 
                temp = temp.left ; 
            }
        }
        ans.add(pre);
        ans.add(succ);
        
        return ans ;
    }
}
