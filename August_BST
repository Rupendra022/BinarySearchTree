4. Kth Smallest in BST >- 
class Solution {
    static int ans;
    static int count;

    public void inorder(TreeNode root, int k) {
        if (root == null) {
            return;
        }

        inorder(root.left, k);
        count++;
        if (count == k) {
            ans = root.val;
            return;
        }
        inorder(root.right, k);

    }

    public int kthSmallest(TreeNode root, int k) {
        count = 0;
        ans = 0;
        inorder(root, k);
        return ans;
    }
}
-----------------------------------------------------------------------------------------------------------------------------------------------
5. Range sum in BST >- 
class Solution {
    static int sum;
    
    public void inOrder(TreeNode root, int l, int h) {
        if (root == null) return;

        // go left only if needed
        if (root.val > l) {
            inOrder(root.left, l, h);
        }

        // add if in range
        if (root.val >= l && root.val <= h) {
            sum += root.val;
        }

        // go right only if needed
        if (root.val < h) {
            inOrder(root.right, l, h);
        }
    }

    public int rangeSumBST(TreeNode root, int low, int high) {
        sum = 0;
        inOrder(root, low, high);
        return sum;
    }
}

